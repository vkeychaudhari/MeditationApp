<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MeditationApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MeditationApp.Views"
    Shell.FlyoutBehavior="Disabled" 
    Title="MeditationApp">

    <!-- Define the initial/main page -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:GetStartedPage}"
        Route="GetStartedPage" />

    <!-- Define other pages for navigation -->
    <ShellContent
        Title="Sign In"
        ContentTemplate="{DataTemplate local:SignInPage}"
        Route="SignInPage" />

    <ShellContent
        Title="Sign Up"
        ContentTemplate="{DataTemplate local:SignUpPage}"
        Route="SignUpPage" />

    <ShellContent
        Title="Welcome"
        ContentTemplate="{DataTemplate local:WelcomePage}"
        Route="WelcomePage" />

    <ShellContent
        Title="Topics"
        ContentTemplate="{DataTemplate local:ChooseTopicPage}"
        Route="ChooseTopicPage" />

</Shell>
